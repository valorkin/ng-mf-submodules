{
  "version": 1,
  "projects": {
    "nx-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "css"
        }
      },
      "root": "apps/nx-app",
      "sourceRoot": "apps/nx-app/src",
      "prefix": "nx-app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/nx-app",
            "index": "apps/nx-app/src/index.html",
            "main": "apps/nx-app/src/main.ts",
            "polyfills": "apps/nx-app/src/polyfills.ts",
            "tsConfig": "apps/nx-app/tsconfig.app.json",
            "aot": true,
            "assets": ["apps/nx-app/src/favicon.ico", "apps/nx-app/src/assets"],
            "styles": ["apps/nx-app/src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/nx-app/src/environments/environment.ts",
                  "with": "apps/nx-app/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "nx-app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "nx-app:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "nx-app:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/nx-app/tsconfig.app.json",
              "apps/nx-app/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!apps/nx-app/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "apps/nx-app/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "nx-app-e2e": {
      "root": "apps/nx-app-e2e",
      "sourceRoot": "apps/nx-app-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/nx-app-e2e/cypress.json",
            "tsConfig": "apps/nx-app-e2e/tsconfig.e2e.json",
            "devServerTarget": "nx-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "nx-app:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["apps/nx-app-e2e/tsconfig.e2e.json"],
            "exclude": ["**/node_modules/**", "!apps/nx-app-e2e/**/*"]
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "schematics": {
    "@nrwl/workspace": {
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/cypress": {
      "cypress-project": {
        "linter": "tslint"
      }
    },
    "@nrwl/node": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/nest": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/express": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/angular:application": {
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest"
    }
  },
  "defaultProject": "nx-app"
}
